#!/usr/bin/env pwsh

# Ejecutar ESLint
npm run lint
if ($LASTEXITCODE -ne 0) { 
    Write-Error "ESLint failed. Please fix the issues before committing."
    exit $LASTEXITCODE
}

# Ejecutar pruebas
npm test
if ($LASTEXITCODE -ne 0) { 
    Write-Error "Tests failed. Please fix the issues before committing."
    exit $LASTEXITCODE
}
